<h3><%= gettext("Reservation Details:") %> </h3>
<div data-role="reservation">
  <div>
    <%= gettext("Starts on:") %>
    <%= @reservation.begins_at %>
  </div>
  <div>
    <%= gettext("Ends on") %>
    <%= @reservation.ends_at %>
  </div>
  <div>
    <%= gettext("Status:") %>
    <%= @reservation.status %>
</div>

<%= link gettext("Approve Reservation"), to: reservation_approval_path(@conn, :create, @reservation), method: :post %>
